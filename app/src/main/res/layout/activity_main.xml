<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background4">


    <ImageView
        android:id="@+id/turnImageInnerCircle4"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/dots"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/turnImageInnerCircle3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/background3"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/turnImageInnerCircle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/background"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/turnImageInnerCircle2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/background2"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/turnImage"
        android:layout_width="27dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_power_off2"
        android:layout_gravity="center_horizontal"
        android:onClick="turnOn"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Screen"
        android:textColor="#000000"
        android:textSize="12sp"
        android:onClick="gotoScreen"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/background5"
        android:layout_margin="26dp"/>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2400970636684694/3804584386">
    </com.google.android.gms.ads.AdView>

</FrameLayout>